{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "no-console": [
            "warn",
            {
                "allow": [
                    "info",
                    "error",
                    "warn"
                ]
            }
        ],
        "semi": "off",
        "comma-dangle": "off",
        "space-before-function-paren": "off"
    }
}