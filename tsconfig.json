{
    "include": [
        "./src/**/*",
        ".eslintrc.json"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist"
    ],
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./",
        "lib": [
            "es5",
            "es6"
        ],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
    }
}